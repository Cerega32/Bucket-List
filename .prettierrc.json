{
	"singleQuote": true,
	"jsxSingleQuote": false,
	"arrowParens": "always",
	"maxLen": ["error", 140, 2],
	"printWidth": 140,
	"tabWidth": 4,
	"useTabs": true,
	"semi": true,
	"bracketSpacing": false,
	"endOfLine": "auto",
	"overrides": [
		{
			"files": ["*.scss", "*.css"],
			"options": {
				"parser": "scss"
			}
		}
	]
}
